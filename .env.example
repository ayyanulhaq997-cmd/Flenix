# Database
DATABASE_URL=postgresql://user:password@localhost:5432/fenix

# Authentication
JWT_SECRET=your-super-secret-jwt-key-min-32-characters-long

# Redis Cache
REDIS_URL=redis://localhost:6379

# Cloud Storage Configuration
# Provider: s3 (AWS S3), wasabi (Wasabi cloud storage), gcs (Google Cloud Storage)
STORAGE_PROVIDER=s3
STORAGE_ACCESS_KEY=your-aws-access-key-id
STORAGE_SECRET_KEY=your-aws-secret-access-key
STORAGE_BUCKET=fenix-streaming-videos
STORAGE_REGION=us-east-1
STORAGE_ENDPOINT=  # Optional: for Wasabi (https://s3.wasabisys.com) or custom S3 endpoints

# CDN Configuration
CDN_URL=https://d123456.cloudfront.net  # CloudFront distribution URL

# CloudFront Signed URL Configuration (for private video delivery)
# Generate RSA 2048 key pair: openssl genrsa -out private_key.pem 2048
CLOUDFRONT_DOMAIN=d123456.cloudfront.net  # CloudFront domain name
CLOUDFRONT_KEY_PAIR_ID=APKAIF5J6KLMNO7P2QRS  # AWS CloudFront key pair ID
CLOUDFRONT_PRIVATE_KEY=-----BEGIN RSA PRIVATE KEY-----
MIIEpAIBAAKCAQEA...your-private-key-here...
-----END RSA PRIVATE KEY-----
CLOUDFRONT_URL_EXPIRY=3600  # URL expiry in seconds (default: 1 hour)

# AWS MediaConvert Transcoding (Optional)
TRANSCODING_ENABLED=false
TRANSCODING_REGION=us-east-1
TRANSCODING_ROLE_ARN=arn:aws:iam::ACCOUNT_ID:role/MediaConvertRole
TRANSCODING_OUTPUT_BUCKET=fenix-transcoded-videos
TRANSCODING_OUTPUT_PREFIX=transcoded

# Streaming Configuration
STREAMING_FORMAT=hls  # hls or dash
STREAMING_QUALITIES=hd1080,hd720,sd480,sd360
STREAMING_URL_EXPIRY=3600  # Presigned URL expiry in seconds

# Server Configuration
PORT=5000
NODE_ENV=production
